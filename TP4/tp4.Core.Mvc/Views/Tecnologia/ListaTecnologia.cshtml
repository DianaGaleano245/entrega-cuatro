@using TP4.Core;
@model IEnumerable<Tecnologia>
<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Tecnologia </title>
</head>

<body>
    <h1>Lista Tecnologia</h1>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tecnologia tecnologia in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Tecnologia" asp-action="Index" asp-route-id="@tecnologia.Nombre">@tecnologia.Nombre</a>
                    </td>
                    <td>
                        <a asp-controller="Tecnologia" asp-action="Detalle" asp-route-IdTecnologia="@tecnologia.IdTecnologia"><button>Detalle</button></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    </div>
    <a asp-controller="Tecnologia" asp-action="AltaTecnologia"><button>Agregar Tecnologia</button></a>

</body>


</html>