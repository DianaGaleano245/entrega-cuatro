@using TP4.Core;
@model IEnumerable<Proyecto>;
<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <meta charset="UTF-8">
    <title>Document</title>
</head>

<body>

    @* Muestra el nombre del primer *@
    <h1>Cliente</h1>
    <h2>@Model.First().Cliente.RazonSocial</h2>

    <h3>Lista de Proyectos</h3>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Descripcion
                </th>
                <th>
                    Presupuesto
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Proyecto proyecto in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Cliente" asp-action="Detalle"
                        asp-route-id="@proyecto.Descripcion">@proyecto.Descripcion</a>
                    </td>
                    <td>
                        <a asp-controller="Cliente" asp-action="Detalle"
                        asp-route-id="@proyecto.Presupuesto">@proyecto.Presupuesto</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>

</html>