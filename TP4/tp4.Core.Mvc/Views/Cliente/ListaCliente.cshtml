@using TP4.Core;
@model IEnumerable<Cliente>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Clientes</title>
</head>

<body>
    <h1>Lista Cliente</h1>
    <table>
        <thead>
            <tr>
                <th>
                    Cuit
                </th>
                <th>
                    Razon Social
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                @* El "asp-route-'aca va el atributo que es el identificador unico del objeto, en este caso es "Cuit"
                del Cliente '" *@
                @* El "asp-controller" hace referencia al controlador que se esta usando *@
                @* El "asp-action" hace referencia al metodo que se ejecutara en este caso es el "Index()" *@
                <tr>
                    <td>
                        <a asp-controller="Cliente" asp-action="Index" asp-route-Cuit="@cliente.Cuit">@cliente.Cuit</a>
                    </td>
                    <td>
                        <a asp-controller="Cliente" asp-action="Index" asp-route-Cuit="@cliente.Cuit">@cliente.RazonSocial</a>
                    </td>
                    <td>
                        <a asp-action="Detalle" asp-route-Cuit="@cliente.Cuit"><button>Detalle</button></a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Cliente" asp-action="AltaCliente"><button>Agregar Cliente</button></a>

</body>


</html>