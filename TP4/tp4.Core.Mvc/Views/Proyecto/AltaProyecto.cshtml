@using tp4.Core.Mvc.ViewModels;
@model VMProyecto
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Agregra Cliente</title>
</head>

<body>
    <main>
        <form asp-action="AltaProyecto" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="DescripcionProyecto" class="form-label">Descripcion:</label>
                <input asp-for="DescripcionProyecto" class="form-control">

                <label asp-for="PresupuestoProyecto" class="form-label">Presupuesto:</label>
                <input asp-for="PresupuestoProyecto" class="form-control">

                <label asp-for="InicioProyecto" class="form-label">Inicio:</label>
                <input asp-for="InicioProyecto" class="form-control">

                <label asp-for="FinProyecto" class="form-label">Fin:</label>
                <input asp-for="FinProyecto" class="form-control">
                <input type="hidden" asp-for="idProyecto" />
                <br>
                <p>Cliente:</p>
                <select asp-items="Model.Clientes" asp-for="Cuit" class="form-select">
                    @if (Model.Cuit == 0)
                    {
                        <option selected="selected" value="" disabled>Selecione un cliente</option>
                    }
                </select>
            </div>
            <div>
                <button type="submit">Agregar</button>
            </div>
        </form>
    </main>
</body>

</html>
