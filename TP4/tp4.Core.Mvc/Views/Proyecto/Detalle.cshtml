@using TP4.Core;
@model IEnumerable<Requerimiento>
<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Proyectos</title>
</head>

<body>
    <h1>Cliente</h1>
    <h2>@Model.First()._Proyecto.Descripcion</h2>
    <h1>Lista Requerimientos</h1>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Cliente
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Presupuesto
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Requerimiento requerimiento in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Proyecto" asp-action="Index" asp-route-id="@requerimiento.Descripcion">@requerimiento.Descripcion</a>
                    </td>
                    <td>
                        <a asp-controller="Proyecto" asp-action="Index" asp-route-id="@requerimiento.Complejidad">@requerimiento.Complejidad</a>
                    </td>
                    <td>
                        <a asp-controller="Proyecto" asp-action="Index" asp-route-id="@requerimiento.Tecnologia">@requerimiento.Tecnologia.Nombre</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    </div>
</body>


</html>