@using TP4.Core;
@model IEnumerable<Requerimiento>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Requerimiento</title>
</head>

<body>
    <h1>Lista Requerimiento</h1>
    <table>
        <thead>
            <tr>
                <th>
                    Descripcion
                </th>
                <th>
                    Complejidad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Requerimiento requerimiento in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Requerimiento" asp-action="Index"
                        asp-route-id="@requerimiento.IdRequerimiento">@requerimiento.Descripcion</a>
                    </td>
                    <td>
                        <a asp-controller="Requerimiento" asp-action="Index"
                        asp-route-id="@requerimiento.IdRequerimiento">@requerimiento.Complejidad</a>
                    </td>
                    <td>
                        <a asp-controller="Rewuerimiento" asp-action="Detalle"><button>Detalle</button></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <a asp-controller="Requerimiento" asp-action="AltaRequerimiento"><button>Agregar Requerimiento</button></a>

</body>


</html>