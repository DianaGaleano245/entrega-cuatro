<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tp4.Core.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tp4.Core.Mvc.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">tp4.Core.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarClienteMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Cliente
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarClienteMenu">
                                @* <li><a class="dropdown-item" asp-controller="Cliente" asp-action="AltaCliente"><i class="bi bi-list-nested"></i> AltaCliente</a></li> *@
                                <li><a class="dropdown-item" asp-controller="Cliente" asp-action="Index"><i class="bi bi-plus-circle"></i> Clientes</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarProyectoMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Proyecto
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarProyectoMenu">
                                @* <li><a class="dropdown-item" asp-controller="Cliente" asp-action="AltaCliente"><i class="bi bi-list-nested"></i> AltaCliente</a></li> *@
                                <li><a class="dropdown-item" asp-controller="Proyecto" asp-action="Index"><i class="bi bi-plus-circle"></i> Proyectos</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarRequerimientoMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Requerimiento
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarRequerimientoMenu">
                                <li><a class="dropdown-item" asp-controller="Requerimiento" asp-action="Index"><i class="bi bi-plus-circle"></i>Requerimiento</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarTecnologiaMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Tecnologia
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarTecnologiaMenu">
                                <li><a class="dropdown-item" asp-controller="Tecnologia" asp-action="Index"><i class="bi bi-plus-circle"></i>Tecnologia</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - tp4.Core.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
